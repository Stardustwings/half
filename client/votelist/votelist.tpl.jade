#votelist
  //- div votelist

  select(name='category')
    option(value='all', selected='selected') 全部
    option(value='categ0') 商标设计
    option(value='categ1') 图标设计
    option(value='categ2') 软件设计
    option(value='categ3') 网页设计
    option(value='categ4') 服装设计
    option(value='categ5') 照片
    option(value='categ6') 其他

  select(name='sortBy')
    option(value='initiateDate', selected='selected') 按发布时间排序
    option(value='numOfBallots') 按热门程度排序
    option(value='reportNum') 按被举报数排序

  each votelist
    hr

    form.deleteForm
      input(type='hidden', name='voteId', value='#{_id}')
      input(type='hidden', name='firstImageId', value='#{firstImageId}')
      input(type='hidden', name='secondImageId', value='#{secondImageId}')
      button delete

    form.reportForm
      input(type='hidden', name='voteId', value='#{_id}')
      button report

    form.statusForm
      input(type='hidden', name='voteId', value='#{_id}')
      if isOpen
        button close
      else
        button open

    div.votelistbody
      div.votelisthead
        //- div.initiatorimg
