                  //- span #{vote.statisticsOfSecond.occupation.occup4}
                  div.bar(style='width:{{percentage vote.statisticsOfSecond.occupation.occup4 vote.statisticsOfFirst.occupation.occup4}}')
                div
                  h5 服务业
                  //- span #{vote.statisticsOfSecond.occupation.occup5}
                  div.bar(style='width:{{percentage vote.statisticsOfSecond.occupation.occup5 vote.statisticsOfFirst.occupation.occup5}}')
                div
                  h5 地产建筑
                  //- span #{vote.statisticsOfSecond.occupation.occup6}
                  div.bar(style='width:{{percentage vote.statisticsOfSecond.occupation.occup6 vote.statisticsOfFirst.occupation.occup6}}')
                div
                  h5 国家机关
                  //- span #{vote.statisticsOfSecond.occupation.occup7}
                  div.bar(style='width:{{percentage vote.statisticsOfSecond.occupation.occup7 vote.statisticsOfFirst.occupation.occup7}}')
                div
                  h5 农林牧鱼
                  //- span #{vote.statisticsOfSecond.occupation.occup8}
                  div.bar(style='width:{{percentage vote.statisticsOfSecond.occupation.occup8 vote.statisticsOfFirst.occupation.occup8}}')
                div
                  h5 制作加工
                  //- span #{vote.statisticsOfSecond.occupation.occup9}
                  div.bar(style='width:{{percentage vote.statisticsOfSecond.occupation.occup9 vote.statisticsOfFirst.occupation.occup9}}')
      div.ui.ribbon.label.huge 评论
      div.detailbottom
        each comment
          div.detail_comment_content
                div.username
                  a(href='/profile/#{username}')  #{username}
                div.content  #{content}
        form.commentForm.ui.form
          input(type='hidden',name='voteId',value='#{vote._id}')
          div.field
              textarea(name='content')
          button.ui.gray.button submit






